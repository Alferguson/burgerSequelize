<div class="container inNOutYellow">
    <img src="/assets/img/InNOut.png" alt="A picture of In-N-Out">
    <h1>Its time for them burgs</h1>
</div>
<div class="container-fluid row">
    <div class="col-sm-6">
        <h2 class="inNOutRed">These burgs have not been eaten yet</h2>
        <ul class="inNOutYellow">
            {{#each burgers}}
                {{#unless devoured}}
                    {{> burgers/burgers-block}}
                {{/unless}}
             {{/each}}
        </ul>
    </div>    

    <div class="col-sm-6">
        <h2 class="inNOutRed">Burgs that have been devoured!</h2>
        <ul class="inNOutYellow">
            {{#each burgers}}
                {{#if devoured}}
                    {{> burgers/burgers-block devoured=true}}
                {{/if}}    
            {{/each}}
        </ul>
    </div>
</div>    

<form class="create-burger ml-3">
    <h2 class="inNOutRed">Add a Burger</h2>
    <div class="row ml-1">
        <div class="form-group inNOutYellow">
            <label for="burg">Burger Name:</label>
            <input type="text" id="burg" burger_name="burger_name">
        </div>
        <button class="smallerButton" type="submit">Add a Burger</button>
    </div>    
</form>